---
import type { Tag } from "../data/ProjectsData.astro";
import TagBadge from "./TagBadge.astro";
import ArrowTopRight from "./icons/ArrowTopRight.astro";
import AstroIcon from "./icons/AstroIcon.astro";
import Github from "./icons/Github.astro";

const { title, description, url, tags, mainCode, mainCodeUrl, repo } = Astro.props;
---

<div
    role="contentinfo"
    class="relative flex flex-col rounded-md border border-neutral-300 px-3 py-4 shadow-sm dark:border-neutral-800"
>
    <div
        class="pointer-events-none absolute -inset-px opacity-0 transition duration-300"
        style="opacity: 0; background: radial-gradient(600px circle at 352.5px 126px, rgba(97, 97, 97, 0.1), transparent 60%);"
    >
    </div>
    <div class="flex flex-col space-y-3">
        <div class="flex w-full items-center justify-between">
            <div class="flex items-center space-x-[10px]">
                <img
                    src="https://raw.githubusercontent.com/pheralb/project-hackathon/main/public/images/phck.png"
                    alt="project-hackathon"
                    class="h-6 w-6"
                />
                <a
                    href={url}
                    target="_blank"
                    rel="noopener"
                    class="group flex items-center gap-[6px] font-medium decoration-neutral-500 decoration-dotted underline-offset-[5px] hover:underline"
                    ><span>{title}</span>
                    <ArrowTopRight width="13" height="13" /> 
                    </a>
            </div>
            <a
                href={repo}
                title=`Ver el repositorio ${title} en GitHub`
                target="_blank"
                rel="noopener"
                class="opacity-75 transition-opacity duration-100 hover:opacity-100"
            >
            <Github width="16" height="16" /> 
            </a>
        </div>
        <p class="truncate text-sm dark:text-neutral-400" title={description}>
            {description}
        </p>
        <div class="items-center space-x-2 overflow-x-auto flex">
            <a
                href={mainCodeUrl}
                target="_blank"
                rel="noopener"
                class="mr-1"
                title={mainCode}
                >
                <AstroIcon width="24" height="24" /> 
            </a>
            <div class="flex items-center space-x-1">
                {tags.map((tag: Tag) => (
                    <TagBadge tag={tag} />
                ))}
            </div>
        </div>
    </div>
</div>
