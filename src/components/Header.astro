---
const MENU = [
  {
    title: "Sobre m√≠",
    href: "#profile",
  },
  {
    title: "Experiencia",
    href: "#experience",
  },
  {
    title: "Proyectos",
    href: "#projects",
  },
];
---

<header class="sticky top-0 z-50 mb-1 flex w-full items-center justify-center bg-transparent py-4 backdrop-blur-lg">
  <nav class="border-gray-200">
    <div
      class="max-w-screen-xl flex flex-wrap items-center justify-center mx-auto p-4"
    >
      <div
        class="items-center justify-between w-full md:flex md:w-auto md:order-1"
        id="navbar-cta"
      >
        <ul
          class="flex flex-col max-[768px]:flex-row font-medium md:p-0 md:space-x-8 rtl:space-x-reverse md:flex-row md:mt-0 md:border-0"
        >
          {
            MENU.map((menuitem) => (
              <li>
                <a
                  href={menuitem.href}
                  class="block py-2 px-3 md:p-0 decoration-neutral-500 decoration-dotted underline-offset-[5px] hover:underline"
                  aria-current="page"
                >
                  {menuitem.title}
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </nav>
</header>
